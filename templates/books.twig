{% block sub_block %}
<div class="row">
    <form action='/books/search' method="get">
        <table>
            <tr>
                <td width="150" align="right" bgcolor="#c993ff">ARC管理番号:</td>
                <td width="250"><input type="text" name="id" size="20"></td>
                <td width="150" align="right" bgcolor="#c993ff">資料名:</td>
                <td width="250"><input type="text" name="title" size="20"></td>
            </tr>
            <tr>
                <td width="150" align="right" bgcolor="#c993ff">作者:</td>
                <td width="250"><input type="text" name="author" size="20"></td>
                <td width="150" align="right" bgcolor="#c993ff">件数:</td>
                <td width="250"><input type="number" value="4" name="count" size="20"></td>
            </tr>
        </table>
        <input class="submit_btn" type="submit" value="検索">
    </form>
</div>
{% endblock %}

{% block link_block %}
<div class="row">
    <ul class = "pager">
        {% if prev_link is not null %}
            <li class = "prev_link"><a href = "{{prev_link}}">&larr; Prev</a></li>
        {% endif %}
        {% if next_link is not null %}
            <li class = "next_link"><a href = "{{next_link}}">Next &rarr;</a></li>
        {% endif %}
    </ul>
</div>
{% endblock %}
