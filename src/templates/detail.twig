{% extends 'base/base.twig' %}

{% block main_block %}
{% set item = info %}
<div class="row">
    <div class="card col-xs-12 col-md-4 col-md-offset-4">
        {% include 'base/asset.twig' %}
    </div>
</div>
{% endblock %}

{% block sub_block %}
{% if recommend|length > 0 %}
    {{info.title}}を見た人はこちらも見ています
{% endif %}
<div class="row">
    {% if recommend|length > 0 %}
        {% for item in recommend %}
            <div class="card col-xs-12 col-md-3">
                {% include 'base/asset.twig' %}
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
